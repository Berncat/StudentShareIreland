<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ie.wit.studentshareireland">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentShareIreland"
        tools:targetApi="31">
        <activity
            android:name=".activities.Register"
            android:exported="false" />
        <activity
            android:name=".activities.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewItem"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activities.Map"
            android:exported="false"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".activities.Location"
            android:exported="false"
            android:label="@string/title_activity_location" />
        <activity
            android:name=".activities.Listing"
            android:exported="false" />
        <activity
            android:name=".activities.Create"
            android:exported="false" />
        <activity
            android:name=".activities.Search"
            android:exported="false" />
    </application>

</manifest>